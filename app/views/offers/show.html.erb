<div class="container">
  <div class="container">
    <div class="row">
      <div class="col-8">
        <div class="d-flex justify-content-between border-bottom align-items-center my-4">
          <h1><%= @offer.title %>:</h1>
          <h1><%= @offer.price %> €</h1>
        </div>
        <h2><%= @offer.user.first_name %> <%= @offer.user.last_name %></h2>
        <p><%= @offer.description %></p>
      </div>
      <div class="col-4">
        <img src="https://geeko.lesoir.be/wp-content/uploads/sites/58/2019/03/capture-e1552573152526.png" height="400px" width="400px" alt="Map picture" class="m-3">
      </div>
    </div>
  </div>

  <% if @offer.user_id != current_user.id %>
    <div class="container mt-4">
      <%= simple_form_for [@offer, @transaction] do |f| %>
        <%= f.input :date, label: 'Date' %>
        <%= f.input :boat_size, label: 'Quel est la taille de votre batiment ? (en m²)' %>
        <%= f.button :submit, 'Demander une prestation', class: 'btn btn-primary' %>
      <% end %>
    </div>
  <% elsif @offer.user_id == current_user.id %>
    <div class="container mt-4">
      <%= link_to edit_offer_path(@offer) do %><button type="button" class="btn btn-warning">Modifier l'offre</button><% end %>
      <%= link_to offer_path(@offer) do %><button type="button" class="btn btn-danger">Supprimer l'offre</button><% end %>
    </div>
  <% end %>
</div>
