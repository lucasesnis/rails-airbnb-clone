<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="collapse navbar-collapse">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
  <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
      <ul class="navbar-nav">
        <li class="nav-item active">
          <%= link_to "Nos Services", "#", class: "nav-link" %>
        </li>
      </ul>
  </div>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Proposer un service", "/offers/new", class: "nav-link" %>
      </li>
    </ul>
  </div>
  <div class="navbar-text float-right">
    <% if user_signed_in? %>
      <ul class="list-unstyled">
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= current_user.email %>
            <%= link_to "Mes réservations", "#", class: "dropdown-item" %> <br>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %> <br>
            <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %>
          </div>
        </li>
      </ul>
    <% else %>
      <ul class="list-unstyled">
        <div class="d-flex">
          <li class="nav-item active">
            <%= link_to "Se connecter", new_user_session_path, class: "nav-link btn m-3 rounded" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Créer un compte", new_user_registration_path, class: "nav-link btn btn-success m-3 rounded" %>
          </li>
        </div>
      </ul>
    <% end %>
  </div>
</div>
