<div class="banner mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path('bateau.jpg') %>);
">
  <div class="d-flex flex-column justify-content-center home-form">
    <h1>Trouvez le <strong>prestataire</strong> dont vous avez <strong>besoin</strong> !</h1>
    <p>Grâce à Hook, la plaisance redevient plaisante.</p>


    <%= form_tag offers_path, class: 'form-inline home-search', method: :get do %>
      <%= select_tag 'query', options_for_select(Service.all.collect{|u| [u.title, u.id]}), class: "form-control mr-2" %>
      <%= text_field_tag 'date', Date.today, class: "datepicker form-control mr-2" %>
      <%= submit_tag 'Trouver mon prestataire', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="container mb-2">
   <h2 class="my-4">Nos Services</h2>
  <div class="cards">
    <% @services.each do |service| %>
      <%= link_to service_path(service) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path service.photo.key, crop: :fill %>')">
            <h3> <%= service.title %></h3>
          </div>
      <% end %>
    <% end %>
  </div>
</div>
