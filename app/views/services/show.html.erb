<div class="banner mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @service.photo.key %>');
">
  <div class="d-flex flex-column justify-content-center home-form">
    <h1><%= @service.title %></h1>
    <p><%= @service.description %></p>


    <%= form_tag offers_path, class: 'form-inline home-search', method: :get do %>
      <%= select_tag 'query', options_for_select(Service.all.collect{|u| [u.title, u.id]}), class: "form-control mr-2" %>
      <%= text_field_tag 'date', DateTime.now, class: "datepicker form-control mr-2" %>
      <%= submit_tag 'Trouver mon prestataire', class: "btn btn-primary" %>
    <% end %>



  </div>
</div>


<div class="container">
  
 <div class="row">
  <div class="container cards">
    <% @offers.each do |offer| %>
      <%= link_to offer_path(offer) do %>
          <div class="card-offer">
            <div class="text-center mb-4">
                <%= cl_image_tag current_user.avatar, class: "avatar-large", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                <h5 class="pt-4"><%= offer.user.first_name %> <%= offer.user.last_name %></h5>
                <p class=""><%= offer.title %></p>
              </div>
              <div class="d-flex justify-content-end align-items-baseline">
                <h4 class="mb-0">â‚¬<%= offer.price %></h4>
                <p class="mb-0 metre">/m2</p>
              </div>
          </div>
      <% end %>
    <% end %>
  </div>
</div>
</div>
