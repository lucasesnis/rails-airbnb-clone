<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1><%= @service.title %></h1>
    <p><%= @service.description %></p>
  </div>
</div>
 <div class="row">
  <div class="container cards">
    <% @offers.each do |offer| %>
      <div class="card-trip border w-100 m-2 my-4">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" height=200 class="w-100"/>
        <div class="card-trip-infos position-relative d-flex justify-content-space-between align-items-end">
          <div class="p-3">
            <h5><%= link_to offer.title, offer_path(offer) %></h5>
            <p><%= offer.description %></p>
          </div>
          <h4 class="card-trip-pricing">â‚¬<%= offer.price %></h4>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to new_offer_path do %>
  <i class="fas fa-plus-circle btn btn-success ml-3"> Add a new offer</i>
<% end %>
